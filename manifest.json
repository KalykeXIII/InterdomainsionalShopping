{
  "name": "Sabre: Price Saver",
  "description": "A Google Chrome extension that keep a track of your interdomainsional shopping cart",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Kyle Herbertson and Jayden Liddelow",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "activeTab"
  ],
  "icons": {
  "48": "assets/img/ninja.png"
  },
  "background": {
    "scripts": [
      "assets/js/background.js",
      "assets/js/parse.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_image": "assets/img/ninja.png",
    "default_script": "popup.js"
  }
}